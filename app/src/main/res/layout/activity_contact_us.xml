<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.niec.gaurav.e_cellniec.ContactUs">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mainContactPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:id="@+id/contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame"

                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:paddingLeft="10dp"
                    android:text="Reach E-Cell at:" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#111111"
                    android:padding="3dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/fb"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/fb" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/insta"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/insta" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/lin"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/lin" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/emailus" />

                <TextView
                    android:id="@+id/email_us"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#0d8bcf"
                    android:gravity="center"
                    android:text="Email-Us"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/frame"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/chatnow" />

                <TextView
                    android:id="@+id/chat_now"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#0d8bcf"
                    android:gravity="center"
                    android:text="Chat Now"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/frame"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Talk to our representatives:" />

                <View
                    android:id="@+id/ink1"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_below="@+id/tv1"
                    android:layout_marginBottom="5dp"
                    android:background="#111111" />

                <RelativeLayout
                    android:id="@+id/tel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/add_connection_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/one"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/add_connection_icon"
                        android:layout_toRightOf="@+id/add_connection_icon"
                        android:paddingLeft="10dp"
                        android:text="Prashant Gupta"
                        android:textColor="#111111"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView"
                        android:layout_alignStart="@+id/textView"
                        android:layout_below="@id/textView"
                        android:paddingLeft="10dp"
                        android:text="Founder, E-Cell"

                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/add_connection_icon"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/mp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/message"
                            android:onClick="messageGarg" />

                        <ImageView
                            android:id="@+id/cp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/call"
                            android:onClick="callGarg" />
                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:id="@+id/ink2"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_margin="5dp"
                    android:background="#111111" />

                <RelativeLayout
                    android:id="@+id/tel1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/add_connection_icon1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:src="@drawable/one"
                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />


                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/add_connection_icon1"
                        android:layout_toRightOf="@+id/add_connection_icon1"
                        android:paddingLeft="10dp"
                        android:text="Aakash Garg"
                        android:textColor="#111111"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/textView1"
                        android:layout_alignStart="@+id/textView1"
                        android:layout_below="@id/textView1"
                        android:paddingLeft="10dp"
                        android:text="Founder, E-Cell"

                        android:textColor="#111111"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/add_connection_icon1"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:gravity="right"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/mg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/message"
                            android:onClick="messageGarg" />

                        <ImageView
                            android:id="@+id/cg"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/call"
                            android:onClick="callGarg" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</LinearLayout>





